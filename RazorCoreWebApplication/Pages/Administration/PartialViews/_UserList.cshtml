@model List<UsersDto>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="bg-secondary text-white">
            <tr>
                <th>
                    Emp Name
                </th>
                <th>
                    EmpCode
                </th>
                <th>
                    Department
                </th>
                <th>
                    Salary
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Address Type
                </th>
                <th>
                    Address
                </th>
                <th>
                    Is Acitve
                </th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        <a asp-page="/Employees/Details" asp-route-id="@item.Id" class="btn btn-primary text-white">Edit</a>
                        <form method="post" asp-page="Index" asp-route-id="@item.Id" asp-page-handler="Delete"
                          onsubmit="return confirm('Are you sure to delete this record ?')" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
